@model CategoryListViewModel
@{
    ViewData["Title"] = "Gestión de Categorías";
    string GetStatusClass(bool isActive) => isActive ? "status-available" : "status-inactive";
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-tags"></i> Gestión de Categorías</h2>
        <div class="section-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Agregar Categoría
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-tags"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.TotalActiveCategories</div>
                <div class="stat-label">Categorías Activas</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.TotalPlacesInCategories</div>
                <div class="stat-label">Lugares Totales</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.TotalRevenueFromCategories.ToString("C")</div>
                <div class="stat-label">Ingresos Totales</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-ban"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.TotalInactiveCategories</div>
                <div class="stat-label">Inactivas</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="get" asp-action="Index">
            <div class="filter-group">
                <input type="text" name="searchTerm" value="@Model.SearchTerm"
                       placeholder="Buscar por nombre..." class="form-control">
            </div>
            <div class="filter-group">
                <select name="statusFilter" class="form-control">
                    <option value="">Todos los estados</option>
                    <option value="true" selected="@(Model.StatusFilter == true)">Activas</option>
                    <option value="false" selected="@(Model.StatusFilter == false)">Inactivas</option>
                </select>
            </div>
            <div class="filter-group">
                <select name="sortBy" class="form-control">
                    <option value="Name" selected="@(Model.SortBy == "Name")">Nombre</option>
                    <option value="PlaceCount" selected="@(Model.SortBy == "PlaceCount")">Cantidad de Lugares</option>
                    <option value="Revenue" selected="@(Model.SortBy == "Revenue")">Ingresos</option>
                    <option value="CreatedDate" selected="@(Model.SortBy == "CreatedDate")">Fecha de Creación</option>
                </select>
            </div>
            <div class="filter-group">
                <select name="sortDirection" class="form-control">
                    <option value="asc" selected="@(Model.SortDirection == "asc")">Ascendente</option>
                    <option value="desc" selected="@(Model.SortDirection == "desc")">Descendente</option>
                </select>
            </div>
            <button type="submit" class="btn btn-secondary">
                <i class="fas fa-search"></i> Filtrar
            </button>
            @if (Model.HasActiveFilters)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Limpiar Filtros
                </a>
            }
        </form>
    </div>

    <!-- Filter Summary -->
    @if (Model.HasActiveFilters)
    {
        <div class="filter-summary">
            <i class="fas fa-filter"></i>
            <span>Filtros activos: @Model.FilterSummary</span>
        </div>
    }

    <!-- Categories Table -->
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Categoría</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Lugares</th>
                    <th>Reservas</th>
                    <th>Ingresos</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>
                                <div class="category-info">
                                    <i class="@category.Icon category-icon" style="color: @category.Color"></i>
                                    <strong>@category.Name</strong>
                                </div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <span class="description-preview" title="@category.Description">
                                        @(category.Description.Length > 60 ? category.Description.Substring(0, 60) + "..." : category.Description)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin descripción</span>
                                }
                            </td>
                            <td>
                                <span class="status @GetStatusClass(category.IsActive)">
                                    @(category.IsActive ? "Activa" : "Inactiva")
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-info">@category.PlaceCount</span>
                            </td>
                            <td>
                                <span class="badge badge-success">@category.ReservationCount</span>
                            </td>
                            <td>
                                <strong>@category.Revenue.ToString("C")</strong>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn-icon btn-edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@category.Id" class="btn-icon btn-view" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn-icon btn-delete" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (!Model.HasResults)
    {
        <div class="empty-state">
            <i class="fas fa-tags"></i>
            @if (Model.HasActiveFilters)
            {
                <h3>No se encontraron categorías</h3>
                <p>No hay categorías que coincidan con los filtros aplicados</p>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Limpiar Filtros
                </a>
            }
            else
            {
                <h3>No hay categorías registradas</h3>
                <p>Comienza agregando tu primera categoría</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar Primera Categoría
                </a>
            }
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="pagination-container">
            <div class="pagination-info">
                Mostrando @Model.StartItem-@Model.EndItem de @Model.TotalItems categorías
            </div>
            <div class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-statusFilter="@Model.StatusFilter"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDirection="@Model.SortDirection"
                       class="btn-page">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }

                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <a asp-action="Index" asp-route-page="@i"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-statusFilter="@Model.StatusFilter"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDirection="@Model.SortDirection"
                       class="btn-page @(i == Model.CurrentPage ? "active" : "")">
                        @i
                    </a>
                }

                @if (Model.HasNextPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-statusFilter="@Model.StatusFilter"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDirection="@Model.SortDirection"
                       class="btn-page">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
}