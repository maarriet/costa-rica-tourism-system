@model CategoryViewModel
@{
    ViewData["Title"] = $"Eliminar - {Model.Name}";
    bool hasAssociatedPlaces = Model.PlaceCount > 0;
    bool hasRevenue = Model.Revenue > 0;
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-trash text-danger"></i> Eliminar Categoría</h2>
        <div class="section-actions">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> Ver Detalles
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Lista
            </a>
        </div>
    </div>

    <div class="delete-container">
        <!-- Warning Card -->
        <div class="alert alert-danger delete-warning">
            <div class="warning-header">
                <i class="fas fa-exclamation-triangle"></i>
                <h3>¿Está seguro que desea eliminar esta categoría?</h3>
            </div>
            <p>Esta acción no se puede deshacer. La categoría será eliminada permanentemente del sistema.</p>
        </div>

        <!-- Category Information -->
        <div class="details-card delete-info">
            <div class="card-header">
                <div class="category-title">
                    <div class="category-visual">
                        <i class="@Model.Icon category-main-icon" style="color: @Model.Color"></i>
                        <h1>@Model.Name</h1>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="info-grid">
                    <div class="info-section">
                        <h3><i class="fas fa-info-circle"></i> Información de la Categoría</h3>
                        <div class="info-items">
                            <div class="info-item">
                                <strong>Nombre:</strong>
                                <span>@Model.Name</span>
                            </div>
                            <div class="info-item">
                                <strong>Estado:</strong>
                                <span class="@(Model.IsActive ? "text-success" : "text-muted")">
                                    @(Model.IsActive ? "Activa" : "Inactiva")
                                </span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="info-item">
                                    <strong>Descripción:</strong>
                                    <span>@Model.Description</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="info-section">
                        <h3><i class="fas fa-chart-bar"></i> Datos Asociados</h3>
                        <div class="stats-grid">
                            <div class="stat-box @(hasAssociatedPlaces ? "stat-warning" : "")">
                                <div class="stat-number">@Model.PlaceCount</div>
                                <div class="stat-label">Lugares</div>
                            </div>
                            <div class="stat-box @(Model.ReservationCount > 0 ? "stat-warning" : "")">
                                <div class="stat-number">@Model.ReservationCount</div>
                                <div class="stat-label">Reservas</div>
                            </div>
                            <div class="stat-box @(hasRevenue ? "stat-warning" : "")">
                                <div class="stat-number">@Model.Revenue.ToString("C")</div>
                                <div class="stat-label">Ingresos</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Impact Warning -->
        @if (hasAssociatedPlaces || hasRevenue)
        {
            <div class="alert alert-warning impact-warning">
                <h4><i class="fas fa-exclamation-triangle"></i> Impacto de la Eliminación</h4>
                <ul class="impact-list">
                    @if (hasAssociatedPlaces)
                    {
                        <li>
                            <strong>@Model.PlaceCount lugares</strong> perderán su categoría y quedarán sin clasificar
                        </li>
                    }
                    @if (Model.ReservationCount > 0)
                    {
                        <li>
                            <strong>@Model.ReservationCount reservas</strong> históricas perderán la referencia de categoría
                        </li>
                    }
                    @if (hasRevenue)
                    {
                        <li>
                            Se perderá el historial de <strong>@Model.Revenue.ToString("C")</strong> en ingresos asociados
                        </li>
                    }
                </ul>

                @if (hasAssociatedPlaces)
                {
                    <div class="recommendation">
                        <strong>Recomendación:</strong>
                        Considere reasignar los lugares a otra categoría antes de eliminar esta,
                        o marcarla como inactiva en lugar de eliminarla.
                    </div>
                }
            </div>
        }

        <!-- Associated Places Preview -->
        @if (Model.Places != null && Model.Places.Any())
        {
            <div class="details-card affected-places">
                <div class="card-header">
                    <h3><i class="fas fa-map-marker-alt text-warning"></i> Lugares que serán afectados</h3>
                </div>
                <div class="card-body">
                    <div class="affected-places-list">
                        @foreach (var place in Model.Places.Take(5))
                        {
                            <div class="affected-place-item">
                                <div class="place-info">
                                    <strong>@place.Name</strong>
                                    <span class="place-code">(@place.Code)</span>
                                </div>
                                <div class="place-details">
                                    <span class="text-muted">@place.Price.ToString("C")</span>
                                    @if (!string.IsNullOrEmpty(place.Location))
                                    {
                                        <span class="text-muted">• @place.Location</span>
                                    }
                                </div>
                            </div>
                        }
                        @if (Model.Places.Count > 5)
                        {
                            <div class="more-places-notice">
                                <span class="text-muted">Y @(Model.Places.Count - 5) lugares más...</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Delete Form -->
        <div class="delete-actions">
            <form asp-action="Delete" method="post" class="delete-form">
                <input asp-for="Id" type="hidden" />

                @if (hasAssociatedPlaces || hasRevenue)
                {
                    <div class="confirmation-checkbox">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                Entiendo el impacto y confirmo que deseo eliminar esta categoría
                            </label>
                        </div>
                    </div>
                }

                <div class="button-group">
                    <button type="submit" class="btn btn-danger btn-lg"
                    @(hasAssociatedPlaces || hasRevenue ? "disabled" : "")
                            id="deleteButton">
                        <i class="fas fa-trash"></i> Confirmar Eliminación
                    </button>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                        <i class="fas fa-edit"></i> Mejor Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
    <script>
        document.getElementById('confirmDelete')?.addEventListener('change', function() {
            const deleteButton = document.getElementById('deleteButton');
            if (this.checked) {
                deleteButton.removeAttribute('disabled');
            } else {
                deleteButton.setAttribute('disabled', 'disabled');
            }
        });
    </script>
}