@model PlaceViewModel
@{
    ViewData["Title"] = "Agregar Nuevo Lugar";
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}
@if (TempData["PlaceCreateErrors"] != null)
{
    <div class="alert alert-danger">
        <strong>Errores:</strong> @TempData["PlaceCreateErrors"]
    </div>
}

@if (TempData["PlaceCreateDebug"] != null)
{
    <div class="alert alert-info">
        <strong>Debug:</strong> @TempData["PlaceCreateDebug"]
    </div>
}


<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-plus"></i> Agregar Nuevo Lugar Turístico</h2>
        <div class="section-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Lista
            </a>
        </div>
    </div>

    <div class="form-container">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Basic Information -->
            <div class="form-section">
                <h3><i class="fas fa-info-circle"></i> Información Básica</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="form-label">Nombre del Lugar *</label>
                        <input asp-for="Name" class="form-control" placeholder="Ej: Hotel Vista Mar">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Code" class="form-label">Código Único *</label>
                        <input asp-for="Code" class="form-control" placeholder="Ej: HTL001">
                        <span asp-validation-for="Code" class="text-danger"></span>
                        <small class="form-text text-muted">Código único para identificar el lugar</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descripción</label>
                    <textarea asp-for="Description" class="form-control" rows="4"
                              placeholder="Describe las características principales del lugar..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Category and Pricing -->
            <div class="form-section">
                <h3><i class="fas fa-tags"></i> Categoría y Precios</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CategoryId" class="form-label">Categoría *</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                            <option value="">Seleccionar categoría</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Price" class="form-label">Precio *</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0"
                                   placeholder="0.00">
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Location and Capacity -->
            <div class="form-section">
                <h3><i class="fas fa-map-marker-alt"></i> Ubicación y Capacidad</h3>

                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label asp-for="Location" class="form-label">Ubicación</label>
                        <input asp-for="Location" class="form-control"
                               placeholder="Ej: Guanacaste, Tamarindo">
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Capacity" class="form-label">Capacidad Total</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1"
                               placeholder="Ej: 50">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                        <small class="form-text text-muted">Número máximo de personas/habitaciones</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Contact" class="form-label">Información de Contacto</label>
                    <textarea asp-for="Contact" class="form-control" rows="2"
                              placeholder="Teléfono, email, sitio web..."></textarea>
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>

            <!-- Status -->
            <div class="form-section">
                <h3><i class="fas fa-cog"></i> Estado</h3>

                <div class="form-group">
                    <label asp-for="Status" class="form-label">Estado Inicial</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Available">Disponible</option>
                        <option value="Maintenance">En Mantenimiento</option>
                        <option value="Inactive">Inactivo</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Guardar Lugar
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
}