@model List<Sistema_GuiaLocal_Turismo.Models.Reservation>
@{
    ViewData["Title"] = "Mis Reservas";
}

@section Styles {
    <link href="/css/styles.css" rel="stylesheet" />
}

<!-- Header Compacto -->
<div class="compact-header">
    <div class="header-content">
        <div class="header-main">
            <h1><i class="fas fa-calendar-check"></i> Mis Reservas</h1>
            <p>Historial completo de tus reservaciones</p>
        </div>
        <div class="header-stats-mini">
            <div class="stat-mini">
                <i class="fas fa-list"></i>
                <span>@Model.Count Total</span>
            </div>
            <div class="stat-mini">
                <i class="fas fa-clock"></i>
                <span>@Model.Count(r => r.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Pending) Pendientes</span>
            </div>
            <div class="stat-mini">
                <i class="fas fa-check-circle"></i>
                <span>@Model.Count(r => r.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Confirmed) Confirmadas</span>
            </div>
        </div>
    </div>
</div>

<!-- Navegación -->
<nav>
    <div class="nav-container">
        <div class="logo">
            <i class="fas fa-map-marked-alt"></i> Turismo CR
        </div>
        <ul class="nav-links">
            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Inicio</a></li>
            <li><a href="@Url.Action("Places", "Home")"><i class="fas fa-map-marker-alt"></i> Lugares</a></li>
            <li><a href="@Url.Action("MyReservations", "Home")" class="active"><i class="fas fa-calendar-check"></i> Mis Reservas</a></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Salir
                    </button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active">Mis Reservas</li>
        </ol>
    </nav>

    <!-- Acciones Rápidas -->
    <div class="quick-actions mb-4">
        <a href="@Url.Action("Places", "Home")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Reserva
        </a>
        <div class="filter-buttons">
            <button class="btn btn-outline-secondary filter-btn active" data-status="all">
                <i class="fas fa-list"></i> Todas (@Model.Count)
            </button>
            <button class="btn btn-outline-warning filter-btn" data-status="pending">
                <i class="fas fa-clock"></i> Pendientes (@Model.Count(r => r.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Pending))
            </button>
            <button class="btn btn-outline-success filter-btn" data-status="confirmed">
                <i class="fas fa-check-circle"></i> Confirmadas (@Model.Count(r => r.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Confirmed))
            </button>
            <button class="btn btn-outline-danger filter-btn" data-status="cancelled">
                <i class="fas fa-times-circle"></i> Canceladas (@Model.Count(r => r.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Cancelled))
            </button>
        </div>
    </div>

    <!-- Lista de Reservas -->
    @if (Model.Any())
    {
        <div class="reservations-grid">
            @foreach (var reservation in Model)
            {
                <div class="reservation-card" data-status="@reservation.Status.ToString().ToLower()">
                    <!-- Header de la Reserva -->
                    <div class="reservation-header">
                        <div class="reservation-code">
                            <span class="code-badge">@reservation.ReservationCode</span>
                        </div>
                        <div class="reservation-status">
                            @switch (reservation.Status)
                            {
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Pending:
                                    <span class="status-badge status-pending">
                                        <i class="fas fa-clock"></i> Pendiente
                                    </span>
                                    break;
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Confirmed:
                                    <span class="status-badge status-confirmed">
                                        <i class="fas fa-check-circle"></i> Confirmada
                                    </span>
                                    break;
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.CheckedIn:
                                    <span class="status-badge status-checkedin">
                                        <i class="fas fa-sign-in-alt"></i> Check-In
                                    </span>
                                    break;
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.CheckedOut:
                                    <span class="status-badge status-checkedout">
                                        <i class="fas fa-sign-out-alt"></i> Check-Out
                                    </span>
                                    break;
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Completed:
                                    <span class="status-badge status-completed">
                                        <i class="fas fa-flag-checkered"></i> Completada
                                    </span>
                                    break;
                                case Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Cancelled:
                                    <span class="status-badge status-cancelled">
                                        <i class="fas fa-times-circle"></i> Cancelada
                                    </span>
                                    break;
                            }
                        </div>
                    </div>

                    <!-- Información del Lugar -->
                    <div class="place-info-section">
                        <div class="place-icon" style="background-color: @reservation.Place.Category.Color">
                            <i class="@reservation.Place.Category.Icon"></i>
                        </div>
                        <div class="place-details">
                            <h4>@reservation.Place.Name</h4>
                            <p class="category">@reservation.Place.Category.Name</p>
                            <p class="location"><i class="fas fa-map-marker-alt"></i> @reservation.Place.Location</p>
                        </div>
                    </div>

                    <!-- Detalles de la Reserva -->
                    <div class="reservation-details">
                        <div class="detail-row">
                            <div class="detail-item">
                                <i class="fas fa-calendar"></i>
                                <div>
                                    <strong>Fecha de Inicio</strong>
                                    <p>@reservation.StartDate.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))</p>
                                </div>
                            </div>
                            @if (reservation.EndDate.HasValue)
                            {
                                <div class="detail-item">
                                    <i class="fas fa-calendar-check"></i>
                                    <div>
                                        <strong>Fecha de Fin</strong>
                                        <p>@reservation.EndDate.Value.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="detail-row">
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <div>
                                    <strong>Personas</strong>
                                    <p>@reservation.NumberOfPeople @(reservation.NumberOfPeople == 1 ? "persona" : "personas")</p>
                                </div>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-dollar-sign"></i>
                                <div>
                                    <strong>Total Pagado</strong>
                                    <p class="price">$@reservation.TotalAmount.ToString("F2")</p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(reservation.Notes))
                        {
                            <div class="notes-section">
                                <strong><i class="fas fa-sticky-note"></i> Notas:</strong>
                                <p>@reservation.Notes</p>
                            </div>
                        }
                    </div>

                    <!-- Fechas de Check-In/Out si existen -->
                    @if (reservation.CheckInDate.HasValue || reservation.CheckOutDate.HasValue)
                    {
                        <div class="checkin-info">
                            @if (reservation.CheckInDate.HasValue)
                            {
                                <div class="checkin-item">
                                    <i class="fas fa-sign-in-alt text-success"></i>
                                    <span>Check-In: @reservation.CheckInDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            }
                            @if (reservation.CheckOutDate.HasValue)
                            {
                                <div class="checkin-item">
                                    <i class="fas fa-sign-out-alt text-info"></i>
                                    <span>Check-Out: @reservation.CheckOutDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Acciones -->
                    <div class="reservation-actions">
                        <a href="@Url.Action("ReservationDetails", "Home", new { id = reservation.Id })"
                           class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye"></i> Ver Detalles
                        </a>

                        @if (reservation.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Pending ||
                       reservation.Status == Sistema_GuiaLocal_Turismo.Models.ReservationStatus.Confirmed)
                        {
                            <button onclick="cancelReservation(@reservation.Id, '@reservation.ReservationCode')"
                                    class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-times"></i> Cancelar
                            </button>
                        }

                        @if (reservation.StartDate <= DateTime.Today.AddDays(7) && reservation.StartDate >= DateTime.Today)
                        {
                            <span class="upcoming-badge">
                                <i class="fas fa-exclamation-triangle"></i> Próxima
                            </span>
                        }
                    </div>

                    <!-- Fecha de Creación -->
                    <div class="creation-date">
                        <small class="text-muted">
                            <i class="fas fa-clock"></i> Reservado el @reservation.CreatedDate.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-calendar-times"></i>
            </div>
            <h3>No tienes reservas aún</h3>
            <p class="text-muted">¡Explora nuestros increíbles lugares y haz tu primera reserva!</p>
            <a href="@Url.Action("Places", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-search"></i> Explorar Lugares
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Filtros de estado
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remover clase active de todos los botones
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                // Agregar clase active al botón clickeado
                this.classList.add('active');

                const status = this.dataset.status;
                const cards = document.querySelectorAll('.reservation-card');

                cards.forEach(card => {
                    if (status === 'all' || card.dataset.status === status) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Función para cancelar reserva
        function cancelReservation(id, code) {
            if (confirm(`¿Estás seguro de que quieres cancelar la reserva ${code}?`)) {
                fetch('@Url.Action("CancelReservation", "Home")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({ id: id })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al cancelar la reserva');
                });
            }
        }
    </script>

    <style>
        .quick-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .filter-buttons {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .filter-btn.active {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .reservations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
        }

        .reservation-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
        }

            .reservation-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .reservation-header {
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e9ecef;
        }

        .code-badge {
            background: var(--primary-color);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-confirmed {
            background: #d4edda;
            color: #155724;
        }

        .status-checkedin {
            background: #d1ecf1;
            color: #0c5460;
        }

        .status-checkedout {
            background: #e2e3e5;
            color: #383d41;
        }

        .status-completed {
            background: #d4edda;
            color: #155724;
        }

        .status-cancelled {
            background: #f8d7da;
            color: #721c24;
        }

        .place-info-section {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-bottom: 1px solid #f1f1f1;
        }

        .place-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .place-details h4 {
            margin: 0 0 0.25rem 0;
            color: #2c3e50;
        }

        .place-details p {
            margin: 0.25rem 0;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .category {
            font-weight: 500;
            color: var(--primary-color) !important;
        }

        .reservation-details {
            padding: 1.5rem;
        }

        .detail-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .detail-item {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
        }

            .detail-item i {
                color: var(--primary-color);
                margin-top: 0.25rem;
                width: 16px;
            }

            .detail-item strong {
                display: block;
                color: #2c3e50;
                font-size: 0.9rem;
                margin-bottom: 0.25rem;
            }

            .detail-item p {
                margin: 0;
                color: #495057;
                font-size: 0.9rem;
            }

        .price {
            font-weight: 700;
            color: #28a745 !important;
            font-size: 1rem !important;
        }

        .notes-section {
            background: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1rem;
        }

            .notes-section strong {
                color: #495057;
                display: block;
                margin-bottom: 0.5rem;
            }

            .notes-section p {
                margin: 0;
                color: #6c757d;
                font-style: italic;
            }

        .checkin-info {
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }

        .checkin-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

            .checkin-item:last-child {
                margin-bottom: 0;
            }

        .reservation-actions {
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            display: flex;
            gap: 0.5rem;
            align-items: center;
            justify-content: space-between;
        }

        .upcoming-badge {
            background: #ff6f00;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .creation-date {
            padding: 0.75rem 1.5rem;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-icon {
            font-size: 4rem;
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .empty-state h3 {
            color: #495057;
            margin-bottom: 1rem;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .reservations-grid {
                grid-template-columns: 1fr;
            }

            .detail-row {
                grid-template-columns: 1fr;
            }

            .quick-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .filter-buttons {
                justify-content: center;
            }
        }
    </style>
}