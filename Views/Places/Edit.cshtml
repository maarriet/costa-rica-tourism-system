@model PlaceViewModel
@{
    ViewData["Title"] = $"Editar - {Model.Name}";
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-edit"></i> Editar Lugar: @Model.Name</h2>
        <div class="section-actions">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> Ver Detalles
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Lista
            </a>
        </div>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden">
            <input asp-for="CreatedDate" type="hidden">
            <input asp-for="ReservationCount" type="hidden">
            <input asp-for="ActiveReservations" type="hidden">
            <input asp-for="TotalRevenue" type="hidden">
            <input asp-for="MonthlyRevenue" type="hidden">
            <input asp-for="CategoryName" type="hidden">
            <input asp-for="CategoryIcon" type="hidden">
            <input asp-for="CategoryColor" type="hidden">
            <input asp-for="UpdatedDate" type="hidden">
            <input asp-for="OccupancyRate" type="hidden">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Basic Information -->
            <div class="form-section">
                <h3><i class="fas fa-info-circle"></i> Información Básica</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="form-label">Nombre del Lugar *</label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Code" class="form-label">Código Único *</label>
                        <input asp-for="Code" class="form-control" readonly>
                        <span asp-validation-for="Code" class="text-danger"></span>
                        <small class="form-text text-muted">El código no se puede modificar</small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descripción</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Category and Pricing -->
            <div class="form-section">
                <h3><i class="fas fa-tags"></i> Categoría y Precios</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CategoryId" class="form-label">Categoría *</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                            <option value="">Seleccionar categoría</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Price" class="form-label">Precio *</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0">
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Location and Capacity -->
            <div class="form-section">
                <h3><i class="fas fa-map-marker-alt"></i> Ubicación y Capacidad</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Location" class="form-label">Ubicación</label>
                        <input asp-for="Location" class="form-control">
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Capacity" class="form-label">Capacidad Total</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1">
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Contact" class="form-label">Información de Contacto</label>
                    <textarea asp-for="Contact" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>

            <!-- Status and Occupancy -->
            <div class="form-section">
                <h3><i class="fas fa-cog"></i> Estado y Ocupación</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Status" class="form-label">Estado</label>
                        <select asp-for="Status" class="form-control">
                            <option value="Available">Disponible</option>
                            <option value="Occupied">Ocupado</option>
                            <option value="Maintenance">En Mantenimiento</option>
                            <option value="Inactive">Inactivo</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CurrentOccupancy" class="form-label">Ocupación Actual</label>
                        <input asp-for="CurrentOccupancy" class="form-control" type="number" min="0">
                        <span asp-validation-for="CurrentOccupancy" class="text-danger"></span>
                        <small class="form-text text-muted">Número actual de personas/habitaciones ocupadas</small>
                    </div>
                </div>
            </div>

            <!-- Statistics (Read-only) -->
            <div class="form-section">
                <h3><i class="fas fa-chart-bar"></i> Estadísticas</h3>
                <div class="stats-display">
                    <div class="stat-item">
                        <strong>Total de Reservas:</strong> @Model.ReservationCount
                    </div>
                    <div class="stat-item">
                        <strong>Reservas Activas:</strong> @Model.ActiveReservations
                    </div>
                    <div class="stat-item">
                        <strong>Ingresos Totales:</strong> @Model.TotalRevenue.ToString("C")
                    </div>
                    <div class="stat-item">
                        <strong>Ingresos del Mes:</strong> @Model.MonthlyRevenue.ToString("C")
                    </div>
                    @if (Model.AvailableSpaces.HasValue)
                    {
                        <div class="stat-item">
                            <strong>Espacios Disponibles:</strong> @Model.AvailableSpaces
                        </div>
                    }
                </div>
            </div>

            <!-- Audit Information -->
            <div class="form-section">
                <h3><i class="fas fa-info"></i> Información del Registro</h3>
                <div class="audit-info">
                    <div class="audit-item">
                        <strong>Creado:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="audit-item">
                        <strong>Última actualización:</strong> @Model.UpdatedDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                    <i class="fas fa-eye"></i> Ver Detalles
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
}