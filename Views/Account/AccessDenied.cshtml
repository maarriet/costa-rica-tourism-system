@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Turismo Costa Rica</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .access-denied-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            padding: 3rem;
            text-align: center;
            max-width: 500px;
            width: 100%;
        }
        .error-icon {
            font-size: 4rem;
            color: #dc3545;
            margin-bottom: 1rem;
        }
        .btn-primary {
            background: linear-gradient(135deg, #00695c 0%, #26a69a 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="access-denied-container">
                    <div class="error-icon">
                        <i class="fas fa-ban"></i>
                    </div>
                    <h2 class="mb-3">Acceso Denegado</h2>
                    <p class="text-muted mb-4">
                        No tienes permisos para acceder a esta página. 
                        Contacta al administrador si crees que esto es un error.
                    </p>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i> Volver al Login
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Administrador"))
                            {
                                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-outline-secondary">
                                            <i class="fas fa-tachometer-alt"></i> Ir al Dashboard
                                        </a>
                            }
                            else
                            {
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                            <i class="fas fa-home"></i> Ir al Inicio
                                        </a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>