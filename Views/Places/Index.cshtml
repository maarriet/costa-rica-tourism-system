@model PlaceListViewModel
@{
    ViewData["Title"] = "Gestión de Lugares Turísticos";

    string GetStatusClass(string status) => status?.ToUpper() switch
    {
        "AVAILABLE" => "status-available",
        "OCCUPIED" => "status-busy",
        "MAINTENANCE" => "status-maintenance",
        _ => "status-inactive"
    };
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-map-marker-alt"></i> Gestión de Lugares Turísticos</h2>
        <div class="section-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Agregar Lugar
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <form method="get" asp-action="Index">
            <div class="filter-group">
                <input type="text" name="searchTerm" value="@Model.SearchTerm"
                       placeholder="Buscar por nombre..." class="form-control">
            </div>
            <div class="filter-group">
                <select name="categoryFilter" class="form-control">
                    <option value="">Todas las categorías</option>
                    @if (Model.Categories != null)
                    {
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" selected="@(category.Id == Model.CategoryFilter)">
                                @category.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="filter-group">
                <select name="selectedStatus" class="form-control">
                    <option value="">Todos los estados</option>
                    <option value="Available" selected="@(Model.SelectedStatus == PlaceStatus.Available)">Disponible</option>
                    <option value="Occupied" selected="@(Model.SelectedStatus == PlaceStatus.Occupied)">Ocupado</option>
                    <option value="Maintenance" selected="@(Model.SelectedStatus == PlaceStatus.Maintenance)">Mantenimiento</option>
                    <option value="Inactive" selected="@(Model.SelectedStatus == PlaceStatus.Inactive)">Inactivo</option>
                </select>
            </div>
            <button type="submit" class="btn btn-secondary">
                <i class="fas fa-search"></i> Filtrar
            </button>
            @if (Model.HasActiveFilters)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Limpiar Filtros
                </a>
            }
        </form>
    </div>

    <!-- Filter Summary -->
    @if (Model.HasActiveFilters)
    {
        <div class="filter-summary">
            <i class="fas fa-filter"></i>
            <span>Filtros activos: @Model.FilterSummary</span>
        </div>
    }

    <!-- Places Table -->
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Capacidad</th>
                    <th>Ocupación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Places != null && Model.Places.Any())
                {
                    @foreach (var place in Model.Places)
                    {
                        <tr>
                            <td><span class="code">@place.Code</span></td>
                            <td>
                                <div class="place-info">
                                    <strong>@place.Name</strong>
                                    @if (!string.IsNullOrEmpty(place.Location))
                                    {
                                        <small>@place.Location</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="badge badge-primary">@place.CategoryName</span>
                            </td>
                            <td><strong>@place.Price.ToString("C")</strong></td>
                            <td>
                                <span class="status @GetStatusClass(place.Status.ToString())">
                                    @place.StatusText
                                </span>
                            </td>
                            <td>
                                @if (place.Capacity.HasValue)
                                {
                                    <span>@place.Capacity</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <div class="occupancy-info">
                                    <span class="occupancy-numbers">@place.CurrentOccupancy/@(place.Capacity ?? 0)</span>
                                    @if (place.AvailableSpaces.HasValue)
                                    {
                                        <small class="available-spaces">@place.AvailableSpaces disponibles</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@place.Id" class="btn-icon btn-edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@place.Id" class="btn-icon btn-view" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@place.Id" class="btn-icon btn-delete" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (!Model.HasResults)
    {
        <div class="empty-state">
            <i class="fas fa-map-marker-alt"></i>
            @if (Model.HasActiveFilters)
            {
                <h3>No se encontraron lugares</h3>
                <p>No hay lugares que coincidan con los filtros aplicados</p>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Limpiar Filtros
                </a>
            }
            else
            {
                <h3>No hay lugares registrados</h3>
                <p>Comienza agregando tu primer lugar turístico</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Agregar Primer Lugar
                </a>
            }
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="pagination-container">
            <div class="pagination-info">
                Mostrando @Model.StartItem-@Model.EndItem de @Model.TotalItems lugares
            </div>
            <div class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-categoryFilter="@Model.CategoryFilter"
                       asp-route-selectedStatus="@Model.SelectedStatus"
                       class="btn-page">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }

                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <a asp-action="Index" asp-route-page="@i"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-categoryFilter="@Model.CategoryFilter"
                       asp-route-selectedStatus="@Model.SelectedStatus"
                       class="btn-page @(i == Model.CurrentPage ? "active" : "")">
                        @i
                    </a>
                }

                @if (Model.HasNextPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-categoryFilter="@Model.CategoryFilter"
                       asp-route-selectedStatus="@Model.SelectedStatus"
                       class="btn-page">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
}