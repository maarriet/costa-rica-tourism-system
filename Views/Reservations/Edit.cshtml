@model ReservationViewModel
@{
    ViewData["Title"] = $"Editar Reserva - {Model.ReservationCode}";
}

@section Styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
}

<div class="container">
    <div class="section-header">
        <h2><i class="fas fa-edit"></i> Editar Reserva</h2>
        <div class="section-actions">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> Ver Detalles
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Lista
            </a>
        </div>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="ReservationCode" type="hidden" />
            <input asp-for="CreatedDate" type="hidden" />

            <!-- Reservation Info Header -->
            <div class="reservation-header">
                <div class="reservation-code">
                    <h3><i class="fas fa-ticket-alt"></i> @Model.ReservationCode</h3>
                    <span class="creation-date">Creada: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
                </div>
                <div class="current-status">
                    <span class="status-label">Estado Actual:</span>
                    <span class="status status-@Model.Status.ToString().ToLower()">@Model.Status</span>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="form-section">
                <h3><i class="fas fa-user"></i> Información del Cliente</h3>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ClientName" class="form-label">Nombre Completo *</label>
                        <input asp-for="ClientName" class="form-control">
                        <span asp-validation-for="ClientName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ClientEmail" class="form-label">Correo Electrónico *</label>
                        <input asp-for="ClientEmail" class="form-control" type="email">
                        <span asp-validation-for="ClientEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ClientPhone" class="form-label">Teléfono</label>
                        <input asp-for="ClientPhone" class="form-control">
                        <span asp-validation-for="ClientPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NumberOfPeople" class="form-label">Número de Personas *</label>
                        <input asp-for="NumberOfPeople" class="form-control" type="number" min="1" max="20"
                               onchange="calculateTotal()">
                        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Place and Dates -->
            <div class="form-section">
                <h3><i class="fas fa-map-marker-alt"></i> Lugar y Fechas</h3>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="PlaceId" class="form-label">Lugar Turístico *</label>
                        <select asp-for="PlaceId" class="form-control" asp-items="@ViewBag.Places"
                                onchange="updatePlaceInfo()">
                            <option value="">Seleccionar lugar</option>
                        </select>
                        <span asp-validation-for="PlaceId" class="text-danger"></span>
                        @if (Model.Status == ReservationStatus.Confirmed)
                        {
                            <small class="text-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                Cambiar el lugar puede afectar la disponibilidad
                            </small>
                        }
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="StartDate" class="form-label">Fecha de Inicio *</label>
                        <input asp-for="StartDate" class="form-control" type="date"
                               onchange="calculateDays(); calculateTotal()">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="EndDate" class="form-label">Fecha de Fin</label>
                        <input asp-for="EndDate" class="form-control" type="date"
                               onchange="calculateDays(); calculateTotal()">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="StartTime" class="form-label">Hora de Inicio</label>
                        <input asp-for="StartTime" class="form-control" type="time">
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="EndTime" class="form-label">Hora de Fin</label>
                        <input asp-for="EndTime" class="form-control" type="time">
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Pricing and Status -->
            <div class="form-section">
                <h3><i class="fas fa-dollar-sign"></i> Precio y Estado</h3>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="PlacePrice" class="form-label">Precio por Noche/Día</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="PlacePrice" class="form-control" type="number" step="0.01"
                                   onchange="calculateTotal()">
                        </div>
                        <span asp-validation-for="PlacePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Días/Noches</label>
                        <input type="number" class="form-control" id="days-count" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="TotalAmount" class="form-label">Total a Pagar</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input asp-for="TotalAmount" class="form-control" type="number" step="0.01">
                        </div>
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Status" class="form-label">Estado de la Reserva</label>
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ReservationStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="form-label">Días hasta la reserva</label>
                        <input type="number" class="form-control" value="@Model.DaysUntilReservation" readonly>
                        <small class="form-text text-muted">Calculado automáticamente</small>
                    </div>
                </div>
            </div>

            <!-- Additional Notes -->
            <div class="form-section">
                <h3><i class="fas fa-sticky-note"></i> Notas Adicionales</h3>

                <div class="form-group">
                    <label asp-for="Notes" class="form-label">Observaciones</label>
                    <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>

            <!-- Change Log -->
            <div class="form-section">
                <h3><i class="fas fa-history"></i> Historial de Cambios</h3>
                <div class="change-log">
                    <div class="change-item">
                        <strong>Creada:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="change-item">
                        <strong>Última actualización:</strong> @Model.UpdatedDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                    <i class="fas fa-eye"></i> Ver Detalles
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
    <script>
        function calculateDays() {
            const startDate = document.querySelector('input[name="StartDate"]').value;
            const endDate = document.querySelector('input[name="EndDate"]').value;

            if (startDate && endDate) {
                const start = new Date(startDate);
                const end = new Date(endDate);
                const diffTime = Math.abs(end - start);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                document.getElementById('days-count').value = diffDays || 1;
            } else {
                document.getElementById('days-count').value = 1;
            }
        }

        function calculateTotal() {
            const price = parseFloat(document.querySelector('input[name="PlacePrice"]').value) || 0;
            const days = parseInt(document.getElementById('days-count').value) || 1;

            const total = price * days;
            document.querySelector('input[name="TotalAmount"]').value = total.toFixed(2);
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            calculateDays();
            calculateTotal();
        });
    </script>
}