@model ReservationListViewModel
@{
    ViewData["Title"] = "Gestión de Reservas";
    Layout = "/Views/Shared/_Layout.cshtml";

    string GetStatusClass(ReservationStatus status) => status switch
    {
        ReservationStatus.Confirmed => "status-available",
        ReservationStatus.Pending => "status-maintenance",
        ReservationStatus.Cancelled => "status-inactive",
        ReservationStatus.Completed => "status-busy",
        _ => "status-inactive"
    };

    string GetStatusText(ReservationStatus status) => status switch
    {
        ReservationStatus.Confirmed => "Confirmada",
        ReservationStatus.Pending => "Pendiente",
        ReservationStatus.Cancelled => "Cancelada",
        ReservationStatus.Completed => "Completada",
        _ => "Desconocido"
    };
}

@section styles {
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
}

<!-- Header Completo (igual que Dashboard y Categories) -->
<header>
    <div class="header-content">
        <h1>Sistema de Guía Local y Turismo</h1>
        <p>Gestión completa del turismo local en Costa Rica</p>
        <div class="header-stats">
            <div class="stat-box">
                <i class="fas fa-map-marker-alt"></i>
                <span>125 Lugares</span>
            </div>
            <div class="stat-box">
                <i class="fas fa-calendar-check"></i>
                <span>89 Reservas Activas</span>
            </div>
            <div class="stat-box">
                <i class="fas fa-users"></i>
                <span>1,234 Usuarios</span>
            </div>
        </div>
    </div>
</header>

<!-- Navigation -->
<nav>
    <div class="nav-container">
        <div class="logo">
            <i class="fas fa-map-marked-alt"></i> Tourism CR
        </div>
        <ul class="nav-links" id="navLinks">
            <li><a href="/Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
            <li><a href="/Places"><i class="fas fa-map-marker-alt"></i> Lugares</a></li>
            <li><a href="/Categories"><i class="fas fa-tags"></i> Categorías</a></li>
            <li><a href="/Reservations" class="active"><i class="fas fa-calendar-check"></i> Reservas</a></li>
            <li><a href="/Reports"><i class="fas fa-chart-bar"></i> Reportes</a></li>
        </ul>
        <div class="mobile-menu" id="mobileMenu">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</nav>

<!-- Sección de Reservas -->
<section id="reservas" class="container fade-in">
    <div class="section-header">
        <h2><i class="fas fa-calendar-check"></i> Gestión de Reservas</h2>
        <div class="section-actions">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Reserva
            </a>
            <button class="btn btn-info" onclick="exportReservations()">
                <i class="fas fa-download"></i> Exportar
            </button>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Reservations.Count(r => r.Status == ReservationStatus.Confirmed)</div>
                <div class="stat-label">Confirmadas</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Reservations.Count(r => r.Status == ReservationStatus.Pending)</div>
                <div class="stat-label">Pendientes</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">$@Model.Reservations.Sum(r => r.TotalAmount).ToString("N2")</div>
                <div class="stat-label">Ingresos Totales</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@Model.Reservations.Sum(r => r.NumberOfPeople)</div>
                <div class="stat-label">Total Huéspedes</div>
            </div>
        </div>
    </div>

    <!-- Reservations Table -->
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Cliente</th>
                    <th>Lugar</th>
                    <th>Estado</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Reservations != null && Model.Reservations.Any())
                {
                    @foreach (var reservation in Model.Reservations)
                    {
                        <tr>
                            <td>@reservation.ReservationCode</td>
                            <td>@reservation.ClientName</td>
                            <td>@reservation.PlaceName</td>
                            <td>
                                <span class="status @GetStatusClass(reservation.Status)">
                                    @GetStatusText(reservation.Status)
                                </span>
                            </td>
                            <td><strong>$@reservation.TotalAmount.ToString("N2")</strong></td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@reservation.Id" class="btn-icon btn-edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@reservation.Id" class="btn-icon btn-view" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">
                            <div class="empty-state">
                                <i class="fas fa-calendar-check"></i>
                                <h3>No hay reservas registradas</h3>
                                <p>Comienza creando tu primera reserva</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Crear Primera Reserva
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script src="~/js/tourism-system.js"></script>
    <script>
        function exportReservations() {
            window.open('/Reservations/Export', '_blank');
        }
    </script>
}